package pages

import (
	"github.com/templui/templui-quickstart/ui/layouts"
	"github.com/templui/templui-quickstart/ui/components/icon"
	"github.com/templui/templui-quickstart/ui/components/separator"
	"github.com/templui/templui-quickstart/ui/components/sheet"
	"github.com/templui/templui-quickstart/ui/components/button"
	"github.com/templui/templui-quickstart/ui/components/input"
	"github.com/templui/templui-quickstart/ui/components/label"
	"github.com/templui/templui-quickstart/ui/components/datepicker"
	"github.com/templui/templui-quickstart/ui/components/form"
)

templ Testing() {
	@layouts.BaseLayout(){
		<div class="h-full flex justify-center items-center">
			<div class="flex flex-col gap-4 items-center justify-center px-4 w-full max-w-2xl">
				<p>This is the testing page</p>
				@separator.Separator()
				@icon.Car()
				@SheetDefault()
			</div>
		</div>
	}
}

templ SheetDefault() {
	@sheet.Sheet(sheet.Props{
		Side: sheet.SideRight,
	}) {
		@sheet.Trigger() {
			@button.Button(button.Props{
				Variant: button.VariantOutline,
			}) {
				Open
			}
		}
		@sheet.Content() {
			@sheet.Header() {
				@sheet.Title() {
					Edit profile
				}
				@sheet.Description() {
					Make changes to your profile here. Click save when you're done.
				}
			}
			<div class="grid flex-1 auto-rows-min gap-6 px-4">
					@form.Item(){
					<div class="grid gap-3">
						@label.Label(label.Props{
							For: "sheet-demo-name",
						}) {
							Name
						}
						@input.Input(input.Props{
							ID:    "sheet-demo-name",
							Type:  input.TypeEmail,
							Placeholder: "Pedro Duarte",
						})
					</div>
					<div class="grid gap-3">
						@label.Label(label.Props{
							For: "sheet-demo-username",
						}) {
							Username
						}
						<div class="w-full max-w-sm">
							@datepicker.DatePicker()
						</div>
					</div>
					}
					
				
			</div>
			@sheet.Footer() {
				@button.Button(button.Props{
					Type: "submit",
				}) {
					Save changes
				}
				@sheet.Close() {
					@button.Button(button.Props{
						Variant: button.VariantOutline,
					}) {
						Close
					}
				}
			}
		}
	}
}